<% for x in @show_crypto %>
  <% if @crypto.symbol.upcase == x["symbol"] %>
    <% crypto_name = x["name"] %>
    <% crypto_price = x["price_usd"] %>
    <% crypto_rank = x["rank"] %>
  <% end %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= crypto_name.upcase %></h3>
  </div>
  <div class="panel-body">
    <p>
      <strong>Current Price:</strong>
      <%= crypto_price %>
    </p>

    <p>
      <strong>Cost per:</strong>
      <%= @crypto.cost_per %>
    </p>
    <p>
      <strong>Amount owned:</strong>
      <%= @crypto.amount_owned %>
    </p>

    <p>
      <strong>Crypto Rank:</strong>
      <%= crypto_rank %>
    </p>
  </div>
</div>



</div>
  <div class="panel-footer">
    <%= link_to 'Edit', edit_crypto_path(@crypto) %> |
    <%= link_to 'Delete', @crypto, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to 'Back', cryptos_path %>
  </div>
</div>
